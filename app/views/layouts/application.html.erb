            <span></span>
          </div>
        </div>

        <div class="navbar-menu" id="nav-menu">
          <div class="navbar-end">
            <a class="navbar-item" href="/faq">
              What's this?
            </a>
            <a class="navbar-item" href="/password">
              What's a good password?
            </a>
          </div>
        </div>

      </nav>
    </div>

    <section class="hero  is-primary">
      <div class="hero-body">
        <div class="container has-text-centered">
          <h1 class="title">
            Welcome to Passmoji! <a href="/"><img src="<%= image_path("emoji/png/#{@moji_index.find_by_moji('ü§î')['unicode']}.png") %>" />&nbsp;<img src="<%= image_path("emoji/png/#{@moji_index.find_by_moji('üò≤')['unicode']}.png") %>" />&nbsp;<img src="<%= image_path("emoji/png/#{@moji_index.find_by_moji('üòÑ')['unicode']}.png") %>" /></a>
          </h1>
          <h2 class="subtitle">
            The cute password generator.
          </h2>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <%= yield %>
      </div>
    </section>

    <footer class="footer">
      <div class="container">
        <div class="content has-text-centered">
          <p>
            <strong>passmoji</strong> ¬©Ô∏è 2017 by <a href="http://twitter.com/doerfli/" target="_blank">@doerfli</a>
          </p>
        </div>
      </div>
    </footer>

    <script nonce="<%= @csp_nonce %>">
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
