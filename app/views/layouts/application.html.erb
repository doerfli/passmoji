<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <title>passmoji</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="layout-documentation page-layout">
      <nav class="navbar">
        <div class="navbar-brand">
          <a class="navbar-item" href="/">
            <img src="<%= image_path("emoji/png/#{@moji_index.find_by_moji('ü§î')['unicode']}.png") %>" />&nbsp;<img src="<%= image_path("emoji/png/#{@moji_index.find_by_moji('üò≤')['unicode']}.png") %>" />&nbsp;<img src="<%= image_path("emoji/png/#{@moji_index.find_by_moji('üòÑ')['unicode']}.png") %>" />
